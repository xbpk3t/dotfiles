// 让常见 JetBrains 弹窗浮动（例：Settings、Search Everywhere、Open File 等）
//window-rule {
//    match app-id="^jetbrains-.*"
//    match title="^(Settings|Search Everywhere|Open File|Project Structure|Find in Files)"
//    open-floating true
//    // 可选：把新浮动窗居中
//    // https://github.com/YaLTeR/niri/wiki/Configuration:-Window-Rules#default-floating-position
//    default-floating-position x=0 y=0 relative-to="top"
